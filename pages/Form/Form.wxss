/* pages/Text/Text.wxss */

/* 横分割线 */
.divLine{
  margin-left: 10rpx;
  margin-right: 10rpx;
  background: #E0E3DA;
  height: 5rpx;
  width: 100%;
}
/* 一行信息 */
.inputLine{ /* 单行文本 */
  display: flex;
  justify-content: flex-start;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.textAreaLine{ /* 多行文本 */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.itemName{
  margin-left: 40rpx;
}
.inputBox{
  width: 100%;
  margin-left: 10rpx;
  margin-right: 20rpx;
}
.textArea{
  margin: 20rpx 20rpx 0rpx 40rpx;
  height: 220rpx;
}
.checkBox-group{
  margin-left: 0rpx;
  margin-right: 20rpx;
}
.checkBox{
  margin: 0rpx 20rpx 10rpx 0rpx;
  font-size: 30rpx;
}
checkbox .wx-checkbox-input {/*checkbox 选项框大小  */
  width: 35rpx;
  height: 35rpx;
}
.picker{
  margin-left: 0rpx;
  margin-right: 20rpx;
}
/* 提交按钮 */
.submitBtn{
  width: 50%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}