/* pages/Profile/Profile.wxss */

/* 横分割线 */
.divLine{
  margin-left: 10rpx;
  margin-right: 10rpx;
  background: #E0E3DA;
  height: 5rpx;
  width: 100%;
}
/* 信息表 */
.textMenu{
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}
/* 头像 */
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-left: 10rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
/* 一行信息 */
.textLine{
  display: flex;
  justify-content: space-between;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  background-color: white;
}
.textLine::after{
  border: none;
}
.textLine-hover{
  background-color: grey;
}
.label{
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.content{
  color: #999999;
}
/* 提交按钮 */
.submitBtn{
  width: 50%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}