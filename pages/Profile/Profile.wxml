<!--pages/Profile/Profile.wxml-->
<scroll-view>
  <form>
    <view class="divLine"></view>
    <view class='textLine'>
      <label style='margin:25rpx 45rpx; font-size:40rpx'>头像</label>
      <image wx:if="{{userInfo!=null}}" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"><text>{userInfo.avatarUrl}</text></image>
    </view>
    <view class="divLine"></view>
    <button class='textLine' hover-class='textLine-hover' data-formname='姓名' bindtap='editDetails'>
      <label class='label'>姓名</label>
      <label class='content'>{{userName}}  ></label>
    </button>
    <view class="divLine"></view>
    <button class='textLine' hover-class='textLine-hover' data-formname='手机号码' bindtap='editDetails'>
      <label class='label'>手机号码</label>
      <label class='content'>{{phoneNumber}}  ></label>
    </button>
    <view class="divLine"></view>
    <button class='textLine' hover-class='textLine-hover' data-formname='岗位' bindtap='editDetails'>
      <label class='label'>岗位</label>
      <label class='content'>{{position}}  ></label>
    </button>
    <view class="divLine"></view>
  </form>
</scroll-view>